<%= nested_form_for @foo, :html=>{:multipart => true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.fields_for :foo_images do |fi| %>
    <% if fi.object.new_record? %>
        <%= fi.file_field :image %>
    <% else %>
        <%= image_tag fi.object.image.url %>
        <%= fi.link_to_remove "Remove" %>
    <% end %>
  <% end %>
  <%= f.link_to_add "Add", :foo_images %>

  <%= f.submit %>
<% end %>

